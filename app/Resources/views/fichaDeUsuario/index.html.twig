                <div class="col-sm-6 page-sidebar mobile-filter-sidebar">
                    <h1 class="text-left"> Usuario: {{ persona.username }} </h1>
                    <h2> Tiene {{ persona.trayectos|length }} trayectos.</h2>
                        {% for trayecto in persona.trayectos %}
